/** @type {import('next').NextConfig} */

import { join } from 'path'

module.exports = {
  webpack: (config, { defaultLoaders }) => {
    config.module.rules.push({
      test: /\.scss$/,
      use: [
        defaultLoaders.babel,
        {
          loader: require('sass-loader'),
          options: {
            sassOptions: {
              includePaths: [join(__dirname, 'src/styles')]
            }
          }
        }
      ]
    })
    return config
  }
}

